<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zbt.commonlibrary.PrettyImageView
        android:id="@+id/pic_test1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background"
        app:border_color="@color/theme_blue"
        app:border_width="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:left_bottom_radiusX="40dp"
        app:left_bottom_radiusY="40dp"
        app:left_top_radiusX="40dp"
        app:left_top_radiusY="40dp"
        app:right_bottom_radiusX="40dp"
        app:right_bottom_radiusY="40dp"
        app:right_top_radiusX="40dp"
        app:right_top_radiusY="40dp"
        app:shape_type="SHAPE_CIRCLE"
        app:show_border="true" />

    <com.zbt.commonlibrary.PrettyImageView
        android:id="@+id/piv_test2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@color/theme_red"
        app:border_color="#ff9900"
        app:border_width="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:left_bottom_radiusX="40dp"
        app:left_bottom_radiusY="10dp"
        app:left_top_radiusX="40dp"
        app:left_top_radiusY="40dp"
        app:right_bottom_radiusX="40dp"
        app:right_bottom_radiusY="10dp"
        app:right_top_radiusX="40dp"
        app:right_top_radiusY="40dp"
        app:shape_type="SHAPE_ROUND"
        app:show_border="false" />


    <com.zbt.commonlibrary.PrettyImageView
        android:id="@+id/pic_test3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background"
        app:border_color="@color/theme_red"
        app:border_width="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_type="SHAPE_CIRCLE"
        app:show_border="true" />

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>